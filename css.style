body {
  font-family: Arial, sans-serif;
  background-color: #f0f8ff;
  text-align: center;
  margin-top: 50px;
}

.container {
  display: flex;
  justify-content: center;
  gap: 20px;
  margin-top: 40px;
}

button {
  padding: 15px 30px;
  font-size: 16px;
  cursor: pointer;
  border: none;
  background-color: #3498db;
  color: white;
  border-radius: 8px;
  transition: background-color 0.3s;
}

button:hover {
  background-color: #2980b9;
}

